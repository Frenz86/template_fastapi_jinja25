# Configurazione Caddy per FastAPI
localhost {
    # Gestione file statici
    handle_path /static/* {
        root * /var/www/static
        file_server
    }

    # Reverse proxy verso FastAPI
    reverse_proxy fastapi:8000 {
        # Headers per mantenere informazioni originali
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }

    # Logging
    log {
        output file /var/log/caddy/access.log
    }

    # Compressione automatica
    encode gzip

    # Headers di sicurezza
    header {
        # Sicurezza base
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        
        # Cache per file statici
        /static/* Cache-Control "public, max-age=2592000"
    }
}

# Configurazione per produzione con dominio personalizzato
# yourdomain.com {
#     reverse_proxy fastapi:8000
#     
#     handle_path /static/* {
#         root * /var/www/static
#         file_server
#     }
#     
#     encode gzip
#     
#     # HTTPS automatico con Let's Encrypt
#     tls your-email@domain.com
# }